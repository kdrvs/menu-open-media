{
  "manifest_version": 2,
  "name": "Open media context",
  "version": "1.0",

  "description": "Adds a context menu: open mediafiles",

  "applications": {
    "gecko": {
        "id": "Open-media@kdrvs",
        "strict_min_version": "45.0"
    }
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "Open-media@kdrvs",
      "strict_min_version": "45.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "permissions": [
    "menus",
    "tabs",
    "<all_urls>"
  ]

}
